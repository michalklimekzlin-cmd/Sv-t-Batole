// team.glyph.js — Tým 3: Glyphs
export function breatheGlyphs() {
  let t = 0;
  function loop() {
    t += 0.03;
    if ((t % 2) < 0.02) {
      window.dispatchEvent(new CustomEvent('team:pulse', {
        detail: { team: 'glyph', strength: 0.05 }
      }));
    }
    requestAnimationFrame(loop);
  }
  loop();
}
breatheGlyphs();